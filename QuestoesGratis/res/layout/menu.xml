<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
    android:id="@+id/menu"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_vertical|center_horizontal"
    android:orientation="vertical" >

    <LinearLayout
        style="@style/ActionBarCompat" />

    <com.google.ads.AdView 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        ads:adSize="BANNER"
        ads:adUnitId="@string/g_ADS_UNIT_ID"
        ads:testDevices="@string/g_ADS_TEST_DEVICES"
        ads:test="true"
        ads:refreshInterval="30"
        ads:loadAdOnCreate="true" />

    <com.gec.questoesGratis.widgets.DashboardLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:fadeScrollbars="false"
        android:padding="@dimen/padding"
        android:layout_gravity="center_vertical|center_horizontal" >

        <Button
            android:id="@+id/home_btn_new"
            style="@style/DashboardButton"
            android:drawableTop="@drawable/home_btn_new"
            android:onClick="onClick_NEW"
            android:text="@string/menu_new" />

        <Button
            android:id="@+id/home_btn_history"
            style="@style/DashboardButton"
            android:drawableTop="@drawable/home_btn_history"
            android:onClick="onClick_HISTORY"
            android:text="@string/menu_history" />

        <Button
            android:id="@+id/home_btn_more"
            style="@style/DashboardButton"
            android:drawableTop="@drawable/home_btn_more"
            android:onClick="onClick_MORE"
            android:text="@string/menu_more" />

        <Button
            android:id="@+id/home_btn_about"
            style="@style/DashboardButton"
            android:drawableTop="@drawable/home_btn_about"
            android:onClick="onClick_ABOUT"
            android:text="@string/menu_about" />

	</com.gec.questoesGratis.widgets.DashboardLayout>

</LinearLayout>